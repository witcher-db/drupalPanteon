{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}
<div class="dropdown dropstart">
  <span role="button" id="search" data-bs-toggle="dropdown" aria-expanded="false">ðŸ”Ž</span>
  <div{{ attributes.addClass(classes, "dropdown-menu")}} aria-labelledby="search">
    {{ title_prefix }}
    {% if label %}
      <h2{{ title_attributes }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}
    {% block content %}
      <div{{ content_attributes.addClass('content') }}>
        {{ content }}
      </div>
    {% endblock %}
  </div>
</div>
